<resources>

    <style name="LightTheme" parent="@android:style/Theme.Light">
    </style>

    <style name="BlackTheme" parent="@android:style/Theme.Black">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Dialog" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/title_dialog_bck_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/category_group</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- CUSTOM STYLES STARTS -->
    <style name="page_background_def">
        <item name="android:background">@drawable/white_gray_gradient_background</item>
    </style>

    <style name="page_background_dark">
        <item name="android:background">@drawable/black_gray_gradient_background</item>
    </style>

    <style name="text_regular_def">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
    </style>

    <style name="text_regular_dark" parent = "text_regular_def">
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="text_medium_def" >
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/text_medium_text_size</item>
    </style>

    <style name="text_medium_dark" parent="text_medium_def">
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="text_subheader_def">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#000</item>
    </style>

    <style name="text_subheader_dark" parent = "text_subheader_def">
        <item name="android:textColor">#fff</item>
    </style>


    <style name="white_background_wh">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>

    <style name="black_background_wh">
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
    </style>

    <style name="section_bg_def">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="section_bg_dark">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="button_def" >
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/btn_regular_text_size</item>
    </style>

    <style name="button_dark" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_regular_text_size</item>
    </style>

    <style name="spinner_def">
        <item name="android:background">@drawable/spinner_wh_background</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="spinner_dark" parent="spinner_def">
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="actionbar_bg_wh">#AFAFAF</color>

    <style name="action_bar_wh" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg_wh</item>
        <item name="background">@color/actionbar_bg_wh</item>
    </style>

    <!-- CUSTOM STYLES ENDS -->

</resources>
